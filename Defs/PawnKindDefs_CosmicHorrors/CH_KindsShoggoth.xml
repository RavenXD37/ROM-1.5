      <shaderType>Cutout</shaderType>
    </bodyGraphicData>
    <dessicatedBodyGraphicData>
      <shaderType>Cutout</shaderType>
    </dessicatedBodyGraphicData>
  </PawnKindDef>
  <PawnKindDef>
    <defName>ROM_Shoggoth</defName>
    <label>Shoggoth</label>
    <race>ROM_Shoggoth</race>
    <combatPower>525</combatPower>
    <defaultFactionType>ROM_Shoggoth</defaultFactionType>
    <aiAvoidCover>true</aiAvoidCover>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Pawn/CosmicHorrors/CallOfCthulhu_Shoggoth</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>4</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Pawn/CosmicHorrors/CallOfCthulhu_Shoggoth</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>5</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Pawn/CosmicHorrors/CallOfCthulhu_Shoggoth</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>5.2</drawSize>
          <shadowData>
            <volume>(0.6, 0.8, 0.6)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
