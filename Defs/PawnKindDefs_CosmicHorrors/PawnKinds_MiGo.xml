	<!-- RACE DEFS -->

	<ThingDef ParentName="BaseCosmicHorrorRace">
		<defName>CosmicHorror_MiGo</defName>
		<label>MiGo</label>
		<description>An insectile fungus with vast membranous wings, numerous segmented limbs and a forest of stubby antenna for a head. They are of a inquisitive mind and seek the brains of lesser species to further their understanding. They are known to search out planets that contain minerals their own world lacks.
		</description>
		<statBases>
			<Mass>70</Mass>	
			<MoveSpeed>5.0</MoveSpeed>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.4</ArmorRating_Sharp>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>0.4</defaultCooldownTime>
				<meleeDamageBaseAmount>7</meleeDamageBaseAmount>
				<meleeDamageDef>Cut</meleeDamageDef>
				<linkedBodyPartsGroup>Legs</linkedBodyPartsGroup>
			</li>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>0.4</defaultCooldownTime>
				<meleeDamageBaseAmount>3</meleeDamageBaseAmount>
				<meleeDamageDef>CosmicHorror_Psychic</meleeDamageDef>
				<linkedBodyPartsGroup>CosmicHorror_Mind</linkedBodyPartsGroup>
			</li>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>1.5</defaultCooldownTime>
				<meleeDamageBaseAmount>10</meleeDamageBaseAmount>
				<meleeDamageDef>Blunt</meleeDamageDef>
				<linkedBodyPartsGroup>CosmicHorror_Wings</linkedBodyPartsGroup>
			</li>	  
		</verbs>
		<race>
			<bloodDef>FilthBloodMiGo</bloodDef>		
			<hasGenders>false</hasGenders>	
